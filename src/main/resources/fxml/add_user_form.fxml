<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.coursetrackingautomation.controller.AddUserFormController"
            stylesheets="@styles.css"
      spacing="18.0"
        styleClass="dialog-card"
        prefWidth="720.0" prefHeight="420.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label text="Kullanıcı Ekle" styleClass="section-title" />

    <Separator/>

    <GridPane hgap="16.0" vgap="12.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
        </columnConstraints>

        <VBox spacing="5.0" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label text="Ad *" styleClass="sidebar-title" />
            <TextField fx:id="firstNameField" promptText="Ad" styleClass="input" />
        </VBox>
        <VBox spacing="5.0" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <Label text="Soyad *" styleClass="sidebar-title" />
            <TextField fx:id="lastNameField" promptText="Soyad" styleClass="input" />
        </VBox>

        <VBox spacing="5.0" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <Label text="E-posta *" styleClass="sidebar-title" />
            <TextField fx:id="emailField" promptText="ornek@email.com" styleClass="input" />
        </VBox>
        <VBox spacing="5.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Label text="Telefon" styleClass="sidebar-title" />
            <TextField fx:id="phoneField" promptText="Örn: 555-123-4567" styleClass="input" />
        </VBox>

        <VBox spacing="5.0" GridPane.rowIndex="2" GridPane.columnIndex="0">
            <Label text="Kullanıcı Adı *" styleClass="sidebar-title" />
            <TextField fx:id="usernameField" promptText="Kullanıcı adı" styleClass="input" />
        </VBox>
        <VBox spacing="5.0" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <Label text="Şifre *" styleClass="sidebar-title" />
            <PasswordField fx:id="passwordField" promptText="Şifre" styleClass="input" />
        </VBox>

        <VBox spacing="5.0" GridPane.rowIndex="3" GridPane.columnIndex="0">
            <Label text="Rol *" styleClass="sidebar-title" />
            <ComboBox fx:id="roleComboBox" promptText="Rol seçin" styleClass="input" />
        </VBox>
    </GridPane>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="İptal"
                onAction="#handleCancel"
            styleClass="btn-secondary"
                cancelButton="true"/>
        <Button fx:id="saveButton" text="Kaydet"
                onAction="#handleSave"
            styleClass="btn-primary-green"
                defaultButton="true"/>
    </HBox>

</VBox>

