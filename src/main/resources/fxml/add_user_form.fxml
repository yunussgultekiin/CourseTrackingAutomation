<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.example.coursetrackingautomation.controller.AddUserFormController"
      spacing="18.0"
      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 28px;"
      prefWidth="520.0" prefHeight="660.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label text="Kullanıcı Ekle"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Separator/>

    <VBox spacing="5.0">
        <Label text="Ad *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="firstNameField" promptText="Ad"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Soyad *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="lastNameField" promptText="Soyad"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="E-posta *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="emailField" promptText="ornek@email.com"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Kullanıcı Adı *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameField" promptText="Kullanıcı adı"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Şifre *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <PasswordField fx:id="passwordField" promptText="Şifre"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Rol *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
            <ComboBox fx:id="roleComboBox" prefWidth="220.0"
                    promptText="Rol seçin"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Telefon" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="phoneField" promptText="Örn: 555-123-4567"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Doğum Tarihi" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <DatePicker fx:id="birthDatePicker"
                    style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 6px; -fx-font-size: 14px;"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="İptal"
                onAction="#handleCancel"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 22px; -fx-cursor: hand; -fx-font-weight: bold;"
                cancelButton="true"/>
        <Button fx:id="saveButton" text="Kaydet"
                onAction="#handleSave"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 24px; -fx-cursor: hand; -fx-font-weight: bold;"
                defaultButton="true"/>
    </HBox>

</VBox>

