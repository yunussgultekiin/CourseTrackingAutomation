<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="20.0"
      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30px;"
      prefWidth="400.0" prefHeight="200.0">
    
    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
    </padding>

    <!-- Error Icon -->
    <Label text="âœ•" 
           style="-fx-font-size: 48px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="48.0"/>
        </font>
    </Label>

    <!-- Error Title -->
    <Label fx:id="errorTitleLabel" text="Error" 
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>

    <!-- Error Message -->
    <Label fx:id="errorMessageLabel" text="An error occurred" 
           style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-wrap-text: true;"
           textAlignment="CENTER" wrapText="true"/>

    <!-- OK Button -->
    <Button fx:id="okButton" text="OK" 
            onAction="#handleOk"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 30px; -fx-cursor: hand; -fx-font-weight: bold;"
            defaultButton="true"/>

</VBox>

