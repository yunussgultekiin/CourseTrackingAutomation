            <TableColumn fx:id="colCourseName" prefWidth="250.0" text="Ders Ad覺" /> <TableColumn fx:id="colMidterm" prefWidth="70.0" text="Vize" />
            <TableColumn fx:id="colFinal" prefWidth="70.0" text="Final" />
