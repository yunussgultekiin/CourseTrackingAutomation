        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
        
        <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" text="Genel Not Ortalamas覺 (GNO):" />
        <Label fx:id="lblGpa" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2980b9;" text="0.00" />

