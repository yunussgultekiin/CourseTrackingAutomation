<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.coursetrackingautomation.controller.LoginController"
            stylesheets="@styles.css"
            styleClass="app-background"
            prefHeight="600.0" prefWidth="800.0">

    <center>
        <VBox alignment="CENTER" spacing="26.0" styleClass="card">
            <padding>
                <Insets top="48.0" right="58.0" bottom="48.0" left="58.0"/>
            </padding>

            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Ders Takip Otomasyonu" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                    <font>
                        <Font name="System Bold" size="30.0"/>
                    </font>
                </Label>
                <Label text="Tekrar Hoşgeldiniz" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;">
                    <font>
                        <Font name="System" size="16.0"/>
                    </font>
                </Label>
            </VBox>

            <VBox spacing="18.0" prefWidth="340.0">
                <VBox spacing="5.0">
                    <Label text="Kullanıcı Adı" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" promptText="Kullanıcı adınızı girin" styleClass="input"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Şifre" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" promptText="Şifrenizi girin" styleClass="input"/>
                </VBox>

                <Label fx:id="errorLabel" text="" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false"/>

                <Button fx:id="loginButton" text="Giriş Yap"
                        onAction="#handleLogin"
                        styleClass="btn-primary-green"
                        prefHeight="45.0" prefWidth="340.0">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Button>
            </VBox>

            <Label text="© 2024 Ders Takip Otomasyonu Sistemi"
                   style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;"/>
        </VBox>
    </center>

</BorderPane>
