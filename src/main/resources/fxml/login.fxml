<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="login-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.LoginController">
    <center>
        <VBox alignment="CENTER" maxWidth="400.0" spacing="25.0" styleClass="login-card">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            
            <VBox alignment="CENTER" spacing="5.0">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #667eea;" text="Course Tracking" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" text="Otomasyon Sistemi" />
            </VBox>

            <VBox spacing="15.0">
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Kullanici Adi" />
                    <TextField fx:id="usernameField" promptText="Kullanici adinizi giriniz" />
                </VBox>

                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Sifre" />
                    <PasswordField fx:id="passwordField" promptText="Sifrenizi giriniz" />
                </VBox>

                <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" text="" visible="false" />

                <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" onAction="#handleLogin" style="-fx-background-color: #667eea;" styleClass="button" text="Giris Yap">
               <font>
                  <Font size="14.0" />
               </font></Button>
            </VBox>

            <Label style="-fx-font-size: 11px; -fx-text-fill: #bdc3c7;" text="Â© 2025 Course Tracking Automation" />
        </VBox>
    </center>
</BorderPane>