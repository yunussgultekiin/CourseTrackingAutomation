<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.coursetrackingautomation.controller.EnrollCoursePopupController"
      stylesheets="@styles.css"
    spacing="12.0" styleClass="card" prefWidth="720.0" prefHeight="480.0">

    <padding>
        <Insets top="18.0" right="18.0" bottom="18.0" left="18.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Derse Kaydol" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <Label fx:id="lblHint" text="Listeden bir ders seçip Kaydol'a basın." style="-fx-text-fill: #7f8c8d;" />

    <TableView fx:id="tableCourses" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCode" text="Kod" prefWidth="120" />
            <TableColumn fx:id="colName" text="Ders" prefWidth="320" />
            <TableColumn fx:id="colCredit" text="Kredi" prefWidth="90" />
            <TableColumn fx:id="colAvailable" text="Boş Kontenjan" prefWidth="120" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="btnEnroll" text="Kaydol" onAction="#handleEnroll" styleClass="btn-primary-green" />
        <Button text="İptal" onAction="#handleClose" styleClass="btn-secondary" />
    </HBox>

</VBox>
