<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="750.0" spacing="15.0" styleClass="card-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.EnrollCoursePopupController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Derse Kaydol" />

    <Separator />

    <Label fx:id="lblHint" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="Listeden bir ders secip Kaydol'a basin." />

    <TableView fx:id="tableCourses" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCode" prefWidth="100.0" text="Kod" />
            <TableColumn fx:id="colName" prefWidth="300.0" text="Ders Adi" />
            <TableColumn fx:id="colCredit" prefWidth="80.0" text="Kredi" />
            <TableColumn fx:id="colAvailable" prefWidth="120.0" text="Bos Kontenjan" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button cancelButton="true" onAction="#handleClose" styleClass="button, button-secondary" text="Iptal" />
        <Button fx:id="btnEnroll" defaultButton="true" onAction="#handleEnroll" styleClass="button, button-success" text="Kaydol" />
    </HBox>

</VBox>