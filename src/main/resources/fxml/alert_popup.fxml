<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="18.0"
      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 26px;"
      prefWidth="400.0" prefHeight="240.0">

    <padding>
        <Insets top="26.0" right="26.0" bottom="26.0" left="26.0"/>
    </padding>

    <Label fx:id="iconLabel" text="✓"
           style="-fx-font-size: 46px; -fx-font-weight: bold; -fx-text-fill: #27ae60;">
        <font>
            <Font name="System Bold" size="46.0"/>
        </font>
    </Label>

    <Label fx:id="titleLabel" text="Başlık"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>

    <Label fx:id="messageLabel" text="Mesaj"
           style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"
           textAlignment="CENTER" wrapText="true"
           maxWidth="340.0"/>

    <HBox fx:id="buttonsContainer" spacing="12.0" alignment="CENTER">
        <Button fx:id="okButton" text="Tamam"
                onAction="#handleOk"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 26px; -fx-cursor: hand; -fx-font-weight: bold;"
                defaultButton="true"/>
        <Button fx:id="cancelButton" text="İptal"
                onAction="#handleCancel"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 22px; -fx-cursor: hand; -fx-font-weight: bold;"
                cancelButton="true"/>
        <Button fx:id="confirmButton" text="Onayla"
                onAction="#handleConfirm"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 22px; -fx-cursor: hand; -fx-font-weight: bold;"
                defaultButton="true"/>
    </HBox>

</VBox>

