<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="18.0"
      stylesheets="@styles.css"
      styleClass="dialog-card"
      prefWidth="400.0" prefHeight="240.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label fx:id="iconLabel" text="✓"
           style="-fx-font-size: 46px; -fx-font-weight: bold; -fx-text-fill: #27ae60;">
        <font>
            <Font name="System Bold" size="46.0"/>
        </font>
    </Label>

    <Label fx:id="titleLabel" text="Başlık"
           styleClass="section-title">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>

    <Label fx:id="messageLabel" text="Mesaj"
           styleClass="muted"
           textAlignment="CENTER" wrapText="true"
           maxWidth="340.0"/>

    <HBox fx:id="buttonsContainer" spacing="12.0" alignment="CENTER">
        <Button fx:id="cancelButton" text="İptal"
            onAction="#handleCancel"
            styleClass="btn-secondary"
            cancelButton="true"/>
        <Button fx:id="okButton" text="Tamam"
                onAction="#handleOk"
                styleClass="btn-primary-green"
                defaultButton="true"/>
        <Button fx:id="confirmButton" text="Onayla"
                onAction="#handleConfirm"
                styleClass="btn-primary-blue"
                defaultButton="true"/>
    </HBox>

</VBox>

