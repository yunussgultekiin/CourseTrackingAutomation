<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.coursetrackingautomation.controller.ProfilePopupController"
      stylesheets="@styles.css"
    spacing="14.0" styleClass="card" prefWidth="520.0" prefHeight="420.0">

    <padding>
        <Insets top="18.0" right="18.0" bottom="18.0" left="18.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Profilim" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="160.0" halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Kullanıcı adı:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="lblUsername" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Ad:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="txtFirstName" promptText="Ad" styleClass="input-compact"
                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Soyad:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="txtLastName" promptText="Soyad" styleClass="input-compact"
                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="E-posta:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="txtEmail" promptText="E-posta" styleClass="input-compact"
                   GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Telefon:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="txtPhone" promptText="Telefon" styleClass="input-compact"
                   GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Separator GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2" />

        <Label text="Mevcut şifre:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <PasswordField fx:id="txtCurrentPassword" promptText="Mevcut şifre" styleClass="input-compact"
                       GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Yeni şifre:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <PasswordField fx:id="txtNewPassword" promptText="Yeni şifre" styleClass="input-compact"
                       GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Label text="Yeni şifre (tekrar):" GridPane.rowIndex="8" GridPane.columnIndex="0" />
        <PasswordField fx:id="txtConfirmPassword" promptText="Yeni şifre (tekrar)" styleClass="input-compact"
                       GridPane.rowIndex="8" GridPane.columnIndex="1" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Kaydet" onAction="#handleSave" styleClass="btn-primary-green" />
        <Button text="İptal" onAction="#handleClose" styleClass="btn-secondary" />
    </HBox>

</VBox>
