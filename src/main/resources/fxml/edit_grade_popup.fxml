<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.coursetrackingautomation.controller.EditGradePopupController"
      stylesheets="@styles.css"
    spacing="18.0" styleClass="dialog-card" prefWidth="520.0" prefHeight="340.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label text="Not Düzenle" styleClass="section-title" />

    <Separator />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="160.0" halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Öğrenci:" styleClass="sidebar-title" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="lblStudent" text="-" styleClass="muted" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Vize:" styleClass="sidebar-title" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="txtMidterm" promptText="0-100" styleClass="input"
                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Final:" styleClass="sidebar-title" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="txtFinal" promptText="0-100" styleClass="input"
                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Ortalama:" styleClass="sidebar-title" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Label fx:id="lblAverage" text="-" styleClass="muted" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Harf:" styleClass="sidebar-title" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <Label fx:id="lblLetter" text="-" styleClass="muted" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Durum:" styleClass="sidebar-title" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <Label fx:id="lblStatus" text="-" styleClass="muted" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="İptal" onAction="#handleClose" styleClass="btn-secondary" />
        <Button text="Kaydet" onAction="#handleSave" styleClass="btn-primary-green" />
    </HBox>

</VBox>
