<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.coursetrackingautomation.controller.AddCourseFormController"
      stylesheets="@styles.css"
      spacing="18.0"
      styleClass="dialog-card"
    prefWidth="720.0" prefHeight="420.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label text="Ders Ekle" styleClass="section-title" />
    <Separator/>

    <GridPane hgap="16.0" vgap="12.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
        </columnConstraints>

        <VBox spacing="5.0" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label text="Ders Kodu *" styleClass="sidebar-title" />
            <TextField fx:id="courseCodeField" promptText="Örn: CS101" styleClass="input" />
        </VBox>
        <VBox spacing="5.0" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <Label text="Ders Adı *" styleClass="sidebar-title" />
            <TextField fx:id="courseNameField" promptText="Örn: Programlama Temelleri" styleClass="input" />
        </VBox>

        <VBox spacing="5.0" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <Label text="Akademisyen *" styleClass="sidebar-title" />
            <ComboBox fx:id="instructorComboBox" promptText="Akademisyen seçin" styleClass="input" />
        </VBox>
        <VBox spacing="5.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Label text="Dönem *" styleClass="sidebar-title" />
            <TextField fx:id="termField" promptText="Örn: 2025" styleClass="input" />
        </VBox>

        <VBox spacing="5.0" GridPane.rowIndex="2" GridPane.columnIndex="0">
            <Label text="Kredi *" styleClass="sidebar-title" />
            <TextField fx:id="creditsField" promptText="Örn: 3" styleClass="input" />
        </VBox>
        <VBox spacing="5.0" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <Label text="Kapasite *" styleClass="sidebar-title" />
            <TextField fx:id="capacityField" promptText="Örn: 30" styleClass="input" />
        </VBox>

        <VBox spacing="5.0" GridPane.rowIndex="3" GridPane.columnIndex="0">
            <Label text="Haftalık Toplam Saat *" styleClass="sidebar-title" />
            <TextField fx:id="weeklyTotalHoursField" promptText="Örn: 3" styleClass="input" />
        </VBox>
        <VBox spacing="5.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <Label text="Haftalık Teori Saati *" styleClass="sidebar-title" />
            <TextField fx:id="weeklyTheoryHoursField" promptText="Örn: 2" styleClass="input" />
        </VBox>

        <VBox spacing="5.0" GridPane.rowIndex="4" GridPane.columnIndex="0">
            <Label text="Haftalık Uygulama Saati *" styleClass="sidebar-title" />
            <TextField fx:id="weeklyPracticeHoursField" promptText="Örn: 1" styleClass="input" />
        </VBox>
    </GridPane>

    <Region VBox.vgrow="ALWAYS" />

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="İptal" onAction="#handleCancel" styleClass="btn-secondary" cancelButton="true" />
        <Button fx:id="saveButton" text="Kaydet" onAction="#handleSave" styleClass="btn-primary-green" defaultButton="true" />
    </HBox>

</VBox>

