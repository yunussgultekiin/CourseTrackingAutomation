<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.example.coursetrackingautomation.controller.AddCourseFormController"
      spacing="18.0"
      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 28px;"
    prefWidth="520.0" prefHeight="580.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label text="Ders Ekle"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Separator/>

    <VBox spacing="5.0">
        <Label text="Ders Kodu *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="courseCodeField" promptText="Örn: CS101"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Ders Adı *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="courseNameField" promptText="Örn: Programlama Temelleri"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Akademisyen *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <ComboBox fx:id="instructorCombo" promptText="Akademisyen seçin"
                  style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 6px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Açıklama" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextArea fx:id="descriptionField" promptText="Ders açıklaması..."
                  wrapText="true" prefRowCount="4"
                  style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Başlangıç Tarihi *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <DatePicker fx:id="startDatePicker"
                    style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 6px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Bitiş Tarihi *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <DatePicker fx:id="endDatePicker"
                    style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 6px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Kredi *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="creditsField" promptText="Örn: 3"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Kapasite *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="capacityField" promptText="Örn: 30"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-size: 14px;"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="İptal"
                onAction="#handleCancel"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 22px; -fx-cursor: hand; -fx-font-weight: bold;"
                cancelButton="true"/>
        <Button fx:id="saveButton" text="Kaydet"
                onAction="#handleSave"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 24px; -fx-cursor: hand; -fx-font-weight: bold;"
                defaultButton="true"/>
    </HBox>

</VBox>

