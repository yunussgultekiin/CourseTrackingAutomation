<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.example.coursetrackingautomation.controller.AddCourseFormController"
    stylesheets="@styles.css"
    fitToWidth="true"
    hbarPolicy="NEVER"
    vbarPolicy="AS_NEEDED"
    prefWidth="520.0" prefHeight="600.0"
    style="-fx-background-color: transparent;">

    <content>
      <VBox spacing="18.0"
          styleClass="card"
          style="-fx-padding: 28px;"
          prefWidth="520.0" prefHeight="600.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label text="Ders Ekle"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Separator/>

    <VBox spacing="5.0">
        <Label text="Ders Kodu *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="courseCodeField" promptText="Örn: CS101" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Ders Adı *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="courseNameField" promptText="Örn: Programlama Temelleri" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Akademisyen *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <ComboBox fx:id="instructorComboBox" promptText="Akademisyen seçin" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Dönem *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="termField" promptText="Örn: 2025" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Kredi *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="creditsField" promptText="Örn: 3" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Haftalık Toplam Saat *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="weeklyTotalHoursField" promptText="Örn: 3" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Haftalık Teori Saati *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="weeklyTheoryHoursField" promptText="Örn: 2" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Haftalık Uygulama Saati *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="weeklyPracticeHoursField" promptText="Örn: 1" styleClass="input-compact"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Kapasite *" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="capacityField" promptText="Örn: 30" styleClass="input-compact"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="İptal"
                onAction="#handleCancel"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 22px; -fx-cursor: hand; -fx-font-weight: bold;"
                cancelButton="true"/>
        <Button fx:id="saveButton" text="Kaydet"
                onAction="#handleSave"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10px 24px; -fx-cursor: hand; -fx-font-weight: bold;"
                defaultButton="true"/>
    </HBox>

        </VBox>
    </content>

</ScrollPane>

