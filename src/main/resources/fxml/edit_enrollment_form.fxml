<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="450.0" prefWidth="500.0" spacing="15.0" styleClass="card-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.EditEnrollmentFormController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Kayit Duzenle" />
    <Separator />

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Kayit ID" />
        <Label fx:id="lblEnrollmentId" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #7f8c8d;" text="-" />
    </VBox>

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Ogrenci" />
        <Label fx:id="lblStudent" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;" text="-" />
    </VBox>

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Ders" />
        <Label fx:id="lblCourse" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;" text="-" />
    </VBox>

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Durum" />
        <ComboBox fx:id="comboStatus" maxWidth="Infinity" promptText="Durum secin" />
    </VBox>

    <Region VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button cancelButton="true" onAction="#handleClose" styleClass="button, button-secondary" text="Iptal" />
        <Button defaultButton="true" onAction="#handleSave" styleClass="button, button-success" text="Kaydet" />
    </HBox>

</VBox>