<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.AdminDashboardController">

    <top>
        <HBox spacing="20.0" styleClass="header-panel">
            <Label styleClass="header-title" text="Yönetici Paneli" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" styleClass="header-user-info" text="Hoş geldiniz" />
            <Button fx:id="profileButton" styleClass="button, button-primary" text="Profilim" onAction="#handleProfile"/>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="220.0" spacing="10.0" styleClass="sidebar-panel">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #95a5a6;" text="Menü" />
            <Separator />

            <Button fx:id="usersButton" maxWidth="Infinity" onAction="#handleUsersManagement" styleClass="sidebar-button" text="Kullanıcı Yönetimi" />
            <Button fx:id="coursesButton" maxWidth="Infinity" onAction="#handleCoursesManagement" styleClass="sidebar-button" text="Ders Yönetimi" />
            <Button fx:id="enrollmentsButton" maxWidth="Infinity" onAction="#handleEnrollments" styleClass="sidebar-button" text="Ders Kayıtları" />
            <Button fx:id="attendanceButton" maxWidth="Infinity" onAction="#handleAttendanceReports" styleClass="sidebar-button" text="Yoklama Raporları" />
            
            <Region VBox.vgrow="ALWAYS" />
            <Separator />
            <Button fx:id="logoutButton" maxWidth="Infinity" onAction="#handleLogout" styleClass="button, button-danger" text="Çıkış Yap" />
        </VBox>
    </left>

    <center>
        <VBox styleClass="content-pane">
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="addUserButton" onAction="#handleAddUser" styleClass="button, button-primary" text="+ Kullanıcı Ekle" />
                <Button fx:id="addCourseButton" onAction="#handleAddCourse" styleClass="button, button-primary" text="+ Ders Ekle" />
                <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="button, button-secondary" text="Yenile" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <VBox spacing="2.0">
                    <TextField fx:id="searchField" promptText="Ara..." />
                    <Label style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;" text="Arama: Kullanıcılar (kullanıcı adı, ad, soyad, e-posta) • Dersler (kod, ad, akademisyen) • Yoklama (öğrenci, ders, hafta, tarih, var/yok)" />
                </VBox>
                <Button fx:id="searchButton" onAction="#handleSearch" styleClass="button, button-primary" text="Ara" />
            </HBox>

            <VBox fx:id="enrollmentsFilterBox" spacing="10.0" styleClass="card-pane" visible="false" managed="false">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Kayıt Filtreleri" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleClearEnrollmentFilters" styleClass="button, button-secondary" text="Filtreleri Temizle" />
                </HBox>

                <HBox spacing="10.0">
                    <TextField fx:id="enrollmentStudentNameField" promptText="Öğrenci adı/soyadı..." HBox.hgrow="ALWAYS" />
                    <ComboBox fx:id="enrollmentCourseCombo" promptText="Ders seçin" prefWidth="320.0" />
                    <ComboBox fx:id="enrollmentStatusCombo" promptText="Durum seçin" prefWidth="180.0" />
                </HBox>

                <Label fx:id="enrollmentsFilterHintLabel" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;" text="Kayıtları listelemek için en az bir filtre seçin." />
            </VBox>

            <HBox spacing="15.0">
                <VBox alignment="CENTER" spacing="5.0" styleClass="card-pane" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #7f8c8d;" text="Toplam Kullanıcı" />
                    <Label fx:id="totalUsersLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #667eea;" text="0" />
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" styleClass="card-pane" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #7f8c8d;" text="Toplam Ders" />
                    <Label fx:id="totalCoursesLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="0" />
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" styleClass="card-pane" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #7f8c8d;" text="Aktif Kayıtlar" />
                    <Label fx:id="activeEnrollmentsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="0" />
                </VBox>
            </HBox>

            <VBox styleClass="card-pane" VBox.vgrow="ALWAYS">
                <Label fx:id="contentTitleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Kullanıcı Listesi" />
                <TableView fx:id="dataTableView" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </VBox>
    </center>
</BorderPane>