<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.AdminDashboardController">

    <top>
        <HBox spacing="20.0" styleClass="header-panel">
            <Label styleClass="header-title" text="Admin Dashboard" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" styleClass="header-user-info" text="Welcome, Admin" />
            <Button fx:id="profileButton" styleClass="button, button-primary" text="Profilim" onAction="#handleProfile"/>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="220.0" spacing="10.0" styleClass="sidebar">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #95a5a6;" text="MENU" />
            <Separator />

            <Button fx:id="usersButton" maxWidth="Infinity" onAction="#handleUsersManagement" styleClass="sidebar-button" text="Kullanici Yonetimi" />
            <Button fx:id="coursesButton" maxWidth="Infinity" onAction="#handleCoursesManagement" styleClass="sidebar-button" text="Ders Yonetimi" />
            <Button fx:id="enrollmentsButton" maxWidth="Infinity" onAction="#handleEnrollments" styleClass="sidebar-button" text="Ders Kayitlari" />
            <Button fx:id="attendanceButton" maxWidth="Infinity" onAction="#handleAttendanceReports" styleClass="sidebar-button" text="Yoklama Raporlari" />
            <Button fx:id="statisticsButton" maxWidth="Infinity" onAction="#handleStatistics" styleClass="sidebar-button" text="Istatistikler" />
            
            <Region VBox.vgrow="ALWAYS" />
            <Separator />
            <Button fx:id="logoutButton" maxWidth="Infinity" onAction="#handleLogout" styleClass="button, button-danger" text="Cikis Yap" />
        </VBox>
    </left>

    <center>
        <VBox styleClass="content-pane">
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="addUserButton" onAction="#handleAddUser" styleClass="button, button-success" text="+ Kullanici Ekle" />
                <Button fx:id="addCourseButton" onAction="#handleAddCourse" styleClass="button, button-primary" text="+ Ders Ekle" />
                <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="button, button-secondary" text="Yenile" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <TextField fx:id="searchField" promptText="Ara..." />
                <Button fx:id="searchButton" onAction="#handleSearch" styleClass="button, button-primary" text="Ara" />
            </HBox>

            <HBox spacing="15.0">
                <VBox alignment="CENTER" spacing="5.0" styleClass="card-pane" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #7f8c8d;" text="Toplam Kullanici" />
                    <Label fx:id="totalUsersLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #667eea;" text="0" />
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" styleClass="card-pane" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #7f8c8d;" text="Toplam Ders" />
                    <Label fx:id="totalCoursesLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="0" />
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" styleClass="card-pane" HBox.hgrow="ALWAYS">
                    <Label style="-fx-text-fill: #7f8c8d;" text="Aktif Kayitlar" />
                    <Label fx:id="activeEnrollmentsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="0" />
                </VBox>
            </HBox>

            <VBox styleClass="card-pane" VBox.vgrow="ALWAYS">
                <Label fx:id="contentTitleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Kullanici Listesi" />
                <TableView fx:id="dataTableView" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </VBox>
    </center>
</BorderPane>