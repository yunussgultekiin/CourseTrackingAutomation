<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.coursetrackingautomation.controller.AdminDashboardController"
            stylesheets="@styles.css"
            styleClass="app-background"
            prefHeight="700.0" prefWidth="1200.0">

    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0"
                  styleClass="topbar">
                <Label text="Yönetici Paneli" styleClass="topbar-title">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" text="Hoşgeldin, Admin" styleClass="topbar-subtitle"/>
                <Button fx:id="profileButton" text="Profilim"
                        onAction="#handleProfile"
                        styleClass="btn-primary-green"/>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox spacing="10.0" styleClass="sidebar" prefWidth="220.0">
            <Label text="MENÜ" styleClass="sidebar-title" />
            <Separator/>

            <Button fx:id="usersButton" text="Kullanıcı Yönetimi"
                    onAction="#handleUsersManagement"
                    styleClass="sidebar-button"
                    prefWidth="220.0"/>
            <Button fx:id="coursesButton" text="Ders Yönetimi"
                    onAction="#handleCoursesManagement"
                    styleClass="sidebar-button"
                    prefWidth="220.0"/>
            <Button fx:id="enrollmentsButton" text="Kayıtlar"
                    onAction="#handleEnrollments"
                    styleClass="sidebar-button"
                    prefWidth="220.0"/>
            <Button fx:id="attendanceButton" text="Yoklama Raporları"
                    onAction="#handleAttendanceReports"
                    styleClass="sidebar-button"
                    prefWidth="220.0"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Separator/>
            <Button fx:id="logoutButton" text="Çıkış Yap"
                    onAction="#handleLogout"
                    styleClass="button-logout"
                    prefWidth="220.0"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0" styleClass="content-area">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="addUserButton" text="+ Kullanıcı Ekle"
                        onAction="#handleAddUser"
                styleClass="btn-primary-green"/>
                <Button fx:id="addCourseButton" text="+ Ders Ekle"
                        onAction="#handleAddCourse"
                styleClass="btn-primary-blue"/>
                <Button fx:id="enrollStudentButton" text="+ Kayıt Ekle"
                    onAction="#handleOpenEnrollStudent"
                styleClass="btn-dark"/>
                <Button fx:id="refreshButton" text="Yenile"
                        onAction="#handleRefresh"
                styleClass="btn-secondary"/>
                <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Ara..." styleClass="input-compact" prefWidth="250.0" />
                <Button fx:id="searchButton" text="Ara"
                        onAction="#handleSearch"
                styleClass="btn-dark"/>
            </HBox>

            <VBox fx:id="enrollmentsFilterBox" spacing="10.0" visible="false" managed="false"
                  styleClass="card">
                <padding>
                    <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
                </padding>
                <Label text="Kayıt Arama / Filtre" styleClass="sidebar-title" />
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <TextField fx:id="enrollmentStudentNameField" promptText="Öğrenci adı" styleClass="input-compact" prefWidth="220.0" />
                    <ComboBox fx:id="enrollmentCourseCombo" promptText="Ders" styleClass="input-compact" prefWidth="260.0" />
                    <ComboBox fx:id="enrollmentStatusCombo" promptText="Durum" styleClass="input-compact" prefWidth="180.0" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Temizle"
                            onAction="#handleClearEnrollmentFilters"
                            styleClass="btn-secondary" />
                </HBox>
                <Label fx:id="enrollmentsFilterHintLabel" text="Kayıtları görmek için en az bir filtre girin." styleClass="muted" />
            </VBox>

            <VBox spacing="10.0" styleClass="card">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
                <Label fx:id="contentTitleLabel" text="Kullanıcı Yönetimi" styleClass="section-title" />

                <TableView fx:id="dataTableView">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_ALL_COLUMNS"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <HBox spacing="15.0">
                <VBox alignment="CENTER" spacing="6.0" styleClass="card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                    </padding>
                    <Label text="Toplam Kullanıcı" styleClass="muted" />
                    <Label fx:id="totalUsersLabel" text="0" styleClass="stat-value" />
                </VBox>

                <VBox alignment="CENTER" spacing="6.0" styleClass="card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                    </padding>
                    <Label text="Toplam Ders" styleClass="muted" />
                    <Label fx:id="totalCoursesLabel" text="0">
                        <styleClass>
                            <String fx:value="stat-value" />
                            <String fx:value="stat-value-blue" />
                        </styleClass>
                    </Label>
                </VBox>

                <VBox alignment="CENTER" spacing="6.0" styleClass="card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                    </padding>
                    <Label text="Aktif Kayıtlar" styleClass="muted" />
                    <Label fx:id="activeEnrollmentsLabel" text="0">
                        <styleClass>
                            <String fx:value="stat-value" />
                            <String fx:value="stat-value-green" />
                        </styleClass>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>
