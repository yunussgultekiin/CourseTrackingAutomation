<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.coursetrackingautomation.controller.AdminDashboardController"
            style="-fx-background-color: #ecf0f1;"
            prefHeight="700.0" prefWidth="1200.0">

    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0"
                  style="-fx-background-color: #2c3e50; -fx-padding: 15px;">
                <Label text="Yönetici Paneli"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" text="Hoşgeldin, Admin"
                       style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;"/>
                <Button fx:id="profileButton" text="Profilim"
                        onAction="#handleProfile"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20px;" prefWidth="220.0">
            <Label text="MENÜ" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <Separator/>

            <Button fx:id="usersButton" text="Kullanıcı Yönetimi"
                    onAction="#handleUsersManagement"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="220.0"/>
            <Button fx:id="coursesButton" text="Ders Yönetimi"
                    onAction="#handleCoursesManagement"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="220.0"/>
            <Button fx:id="enrollmentsButton" text="Kayıtlar"
                    onAction="#handleEnrollments"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="220.0"/>
            <Button fx:id="attendanceButton" text="Yoklama Raporları"
                    onAction="#handleAttendanceReports"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="220.0"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Separator/>
            <Button fx:id="logoutButton" text="Çıkış Yap"
                    onAction="#handleLogout"
                    style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12px; -fx-cursor: hand; -fx-font-weight: bold; -fx-margin-top: 10px;"
                    prefWidth="220.0"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 20px;">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="addUserButton" text="+ Kullanıcı Ekle"
                        onAction="#handleAddUser"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Button fx:id="addCourseButton" text="+ Ders Ekle"
                        onAction="#handleAddCourse"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Button fx:id="enrollStudentButton" text="+ Kayıt Ekle"
                    onAction="#handleOpenEnrollStudent"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Button fx:id="refreshButton" text="Yenile"
                        onAction="#handleRefresh"
                        style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Ara..."
                           style="-fx-background-radius: 5; -fx-padding: 8px; -fx-pref-width: 250px;"/>
                <Button fx:id="searchButton" text="Ara"
                        onAction="#handleSearch"
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
            </HBox>

            <VBox fx:id="enrollmentsFilterBox" spacing="10.0" visible="false" managed="false"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 16px;">
                <Label text="Kayıt Arama / Filtre" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <TextField fx:id="enrollmentStudentNameField" promptText="Öğrenci adı" prefWidth="220.0" />
                    <ComboBox fx:id="enrollmentCourseCombo" promptText="Ders" prefWidth="260.0" />
                    <ComboBox fx:id="enrollmentStatusCombo" promptText="Durum" prefWidth="180.0" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Temizle"
                            onAction="#handleClearEnrollmentFilters"
                            style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8px 15px; -fx-cursor: hand;" />
                </HBox>
                <Label fx:id="enrollmentsFilterHintLabel" text="Kayıtları görmek için en az bir filtre girin." style="-fx-text-fill: #7f8c8d;" />
            </VBox>

            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;">
                <Label fx:id="contentTitleLabel" text="Kullanıcı Yönetimi"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>

                <TableView fx:id="dataTableView" style="-fx-background-color: white;">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_ALL_COLUMNS"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <HBox spacing="15.0">
                <VBox alignment="CENTER" spacing="5.0"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;"
                      HBox.hgrow="ALWAYS">
                    <Label text="Toplam Kullanıcı" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="totalUsersLabel" text="0"
                           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                        <font>
                            <Font name="System Bold" size="32.0"/>
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="5.0"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;"
                      HBox.hgrow="ALWAYS">
                    <Label text="Toplam Ders" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="totalCoursesLabel" text="0"
                           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2980b9;">
                        <font>
                            <Font name="System Bold" size="32.0"/>
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="5.0"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;"
                      HBox.hgrow="ALWAYS">
                    <Label text="Aktif Kayıtlar" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="activeEnrollmentsLabel" text="0"
                           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;">
                        <font>
                            <Font name="System Bold" size="32.0"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>
