<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.coursetrackingautomation.controller.AdminDashboardController"
            style="-fx-background-color: #f5f5f5;"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- Top Menu Bar -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0" 
                  style="-fx-background-color: #667eea; -fx-padding: 15px;">
                <Label text="Admin Dashboard" 
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" text="Welcome, Admin" 
                       style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                <Button fx:id="profileButton" text="Profilim" 
                        onAction="#handleProfile"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Left Sidebar Menu -->
    <left>
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20px;" prefWidth="200.0">
            <Label text="MENU" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #667eea;">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <Separator/>
            
            <Button fx:id="usersButton" text="Users Management" 
                    onAction="#handleUsersManagement"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="200.0"/>
            <Button fx:id="coursesButton" text="Courses Management" 
                    onAction="#handleCoursesManagement"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="200.0"/>
            <Button fx:id="enrollmentsButton" text="Enrollments" 
                    onAction="#handleEnrollments"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="200.0"/>
            <Button fx:id="attendanceButton" text="Attendance Reports" 
                    onAction="#handleAttendanceReports"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="200.0"/>
            <Button fx:id="statisticsButton" text="Statistics" 
                    onAction="#handleStatistics"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: center-left; -fx-padding: 12px; -fx-cursor: hand; -fx-background-radius: 5;"
                    prefWidth="200.0"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Separator/>
            <Button fx:id="logoutButton" text="Logout" 
                    onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12px; -fx-cursor: hand; -fx-font-weight: bold; -fx-margin-top: 10px;"
                    prefWidth="200.0"/>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <VBox spacing="20.0" style="-fx-padding: 20px;">
            <!-- Action Buttons Bar -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="addUserButton" text="+ Add User" 
                        onAction="#handleAddUser"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Button fx:id="addCourseButton" text="+ Add Course" 
                        onAction="#handleAddCourse"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Button fx:id="refreshButton" text="Refresh" 
                        onAction="#handleRefresh"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Search..." 
                           style="-fx-background-radius: 5; -fx-padding: 8px; -fx-pref-width: 250px;"/>
                <Button fx:id="searchButton" text="Search" 
                        onAction="#handleSearch"
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8px 15px; -fx-cursor: hand;"/>
            </HBox>

            <!-- Main Content Table -->
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;">
                <Label fx:id="contentTitleLabel" text="Users Management" 
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                
                <TableView fx:id="dataTableView" style="-fx-background-color: white;">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- Statistics Cards -->
            <HBox spacing="15.0">
                <VBox alignment="CENTER" spacing="5.0" 
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;" 
                      HBox.hgrow="ALWAYS">
                    <Label text="Total Users" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                    <Label fx:id="totalUsersLabel" text="0" 
                           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #667eea;">
                        <font>
                            <Font name="System Bold" size="32.0"/>
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" 
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;" 
                      HBox.hgrow="ALWAYS">
                    <Label text="Total Courses" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                    <Label fx:id="totalCoursesLabel" text="0" 
                           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;">
                        <font>
                            <Font name="System Bold" size="32.0"/>
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="5.0" 
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;" 
                      HBox.hgrow="ALWAYS">
                    <Label text="Active Enrollments" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                    <Label fx:id="activeEnrollmentsLabel" text="0" 
                           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;">
                        <font>
                            <Font name="System Bold" size="32.0"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>
