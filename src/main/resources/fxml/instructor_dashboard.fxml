<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" styleClass="app-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.InstructorDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="topbar">
            
            <Label text="Akademisyen Paneli" styleClass="topbar-title">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <HBox minWidth="30.0" />

            <Label text="Aktif Ders:" styleClass="topbar-subtitle">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <ComboBox fx:id="comboCourses" prefWidth="250.0" promptText="Lütfen Ders Seçiniz..." styleClass="input-compact" />

            <Label text="Hafta:" styleClass="topbar-subtitle">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <ComboBox fx:id="comboWeeks" prefWidth="140.0" promptText="Hafta Seçiniz..." styleClass="input-compact" />

            <Label fx:id="lblCourseHours" styleClass="topbar-subtitle" wrapText="true">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>

            <HBox HBox.hgrow="ALWAYS" />

            <Button fx:id="btnProfile" mnemonicParsing="false" onAction="#handleProfile" styleClass="button-secondary" text="Profilim" />
            <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#handleLogout" styleClass="button-logout" text="Çıkış Yap" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" styleClass="content-area">
            <HBox alignment="CENTER_LEFT">
                <Label text="Öğrenci Listesi ve Not Girişi" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />
                <Label text="* Not girmek/düzenlemek için satıra çift tıklayın." styleClass="muted" />
            </HBox>

            <TableView fx:id="tableStudents" editable="true" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colStudentNumber" prefWidth="120.0" text="Öğrenci No" />
                    <TableColumn fx:id="colFullName" prefWidth="280.0" text="Ad Soyad" />
                    
                    <TableColumn fx:id="colMidterm" prefWidth="80.0" text="Vize" />
                    <TableColumn fx:id="colFinal" prefWidth="80.0" text="Final" />
                    
                    <TableColumn fx:id="colAttendance" prefWidth="120.0" text="Devamsızlık (Saat)" />

                    <TableColumn fx:id="colPresent" prefWidth="100.0" text="Derste" />
                    
                    <TableColumn fx:id="colAverage" prefWidth="80.0" text="Ortalama" />
                    <TableColumn fx:id="colLetterGrade" prefWidth="70.0" text="Harf" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Durum" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footerbar">
            <Button fx:id="btnSave" onAction="#handleSave" prefHeight="35.0" prefWidth="180.0" styleClass="btn-primary-green" text="Değişiklikleri Kaydet">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>