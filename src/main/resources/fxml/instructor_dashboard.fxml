<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.InstructorDashboardController">

    <top>
        <HBox spacing="20.0" styleClass="header-panel">
            <Label styleClass="header-title" text="Akademisyen Paneli" />
            
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 0 30;">
                 <Label style="-fx-font-weight: bold; -fx-text-fill: #ecf0f1;" text="Aktif Ders:" />
                  <ComboBox fx:id="comboCourses" prefWidth="250.0" promptText="Lütfen Ders Seçiniz..." />
                 <Label style="-fx-font-weight: bold; -fx-text-fill: #ecf0f1;" text="Hafta:" />
                 <ComboBox fx:id="comboWeeks" prefWidth="120.0" promptText="Seçin" />
                 <Label fx:id="lblCourseHours" style="-fx-text-fill: #bdc3c7;" text="" />
            </HBox>

            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="btnProfile" onAction="#handleProfile" styleClass="button, button-primary" text="Profilim" />
            <Button fx:id="btnLogOut" onAction="#handleLogout" styleClass="button, button-danger" text="Çıkış Yap" />
        </HBox>
    </top>

    <center>
        <VBox styleClass="content-pane">
            <VBox spacing="10" styleClass="card-pane" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Öğrenci Listesi ve Not Girişi" />
                    <HBox HBox.hgrow="ALWAYS" />
                    <Label style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;" text="* Notları düzenlemek için hücreye çift tıklayın." />
                </HBox>

                <TableView fx:id="tableStudents" editable="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colStudentNumber" prefWidth="120.0" text="Öğrenci No" />
                        <TableColumn fx:id="colFullName" prefWidth="200.0" text="Ad Soyad" />
                        <TableColumn fx:id="colMidterm" prefWidth="80.0" text="Vize" />
                        <TableColumn fx:id="colFinal" prefWidth="80.0" text="Final" />
                        <TableColumn fx:id="colAttendance" prefWidth="120.0" text="Devamsızlık" />
                        <TableColumn fx:id="colPresent" prefWidth="90.0" text="Var" />
                        <TableColumn fx:id="colAverage" prefWidth="80.0" text="Ort." />
                        <TableColumn fx:id="colLetterGrade" prefWidth="80.0" text="Harf" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Durum" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #bdc3c7;">
            <Button fx:id="btnSave" onAction="#handleSave" prefWidth="200" styleClass="button, button-primary" text="Değişiklikleri Kaydet" />
        </HBox>
    </bottom>
</BorderPane>