<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.InstructorDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            
            <Label text="Akademisyen Paneli" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <HBox minWidth="30.0" />

            <Label text="Aktif Ders:" textFill="#ecf0f1">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <ComboBox fx:id="comboCourses" prefWidth="250.0" promptText="Lütfen Ders Seçiniz..." style="-fx-font-size: 13px;" />

            <HBox HBox.hgrow="ALWAYS" />

            <Button fx:id="btnProfile" mnemonicParsing="false" onAction="#handleProfile" styleClass="button-secondary" text="Profilim" />
            <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#handleLogout" styleClass="button-logout" text="Çıkış Yap" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Öğrenci Listesi ve Not Girişi" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />
                <Label text="* Tablo üzerinde notları düzenleyebilirsiniz." textFill="#7f8c8d" />
            </HBox>

            <TableView fx:id="tableStudents" editable="true" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colStudentNumber" prefWidth="120.0" text="Öğrenci No" />
                    <TableColumn fx:id="colFullName" prefWidth="200.0" text="Ad Soyad" />
                    
                    <TableColumn fx:id="colMidterm" prefWidth="80.0" text="Vize" />
                    <TableColumn fx:id="colFinal" prefWidth="80.0" text="Final" />
                    
                    <TableColumn fx:id="colAttendance" prefWidth="120.0" text="Devamsızlık (Saat)" />

                    <TableColumn fx:id="colPresent" prefWidth="100.0" text="Derste" />
                    
                    <TableColumn fx:id="colAverage" prefWidth="80.0" text="Ortalama" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Durum" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #bdc3c7; -fx-padding: 15;">
            <Button fx:id="btnSave" onAction="#handleSave" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Değişiklikleri Kaydet">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>