<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.StudentDashboardController">

    <top>
        <HBox spacing="20.0" styleClass="header-panel">
            <Label styleClass="header-title" text="Öğrenci Paneli" />
            <HBox HBox.hgrow="ALWAYS" />
            <Label fx:id="lblWelcome" styleClass="header-user-info" text="Hoş geldiniz" />
            <Button onAction="#handleShowTranscript" styleClass="button, button-secondary" text="Transkript" />
            <Button onAction="#handleEnrollCourse" styleClass="button, button-primary" text="Derse Kaydol" />
            <Button onAction="#handleProfile" styleClass="button, button-primary" text="Profilim" />
            <Button fx:id="btnLogOut" onAction="#handleLogout" styleClass="button, button-danger" text="Çıkış Yap" />
        </HBox>
    </top>

    <center>
        <VBox styleClass="content-pane">
            <VBox styleClass="card-pane" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Derslerim ve Not Durumu" />
                
                <TableView fx:id="tableStudentCourses" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCourseCode" prefWidth="100.0" text="Kod" />
                        <TableColumn fx:id="colCourseName" prefWidth="250.0" text="Ders Adı" />
                        <TableColumn fx:id="colCredit" prefWidth="60.0" text="Kredi" />
                        <TableColumn fx:id="colWeeklyTotalHours" prefWidth="80.0" text="Toplam" />
                        <TableColumn fx:id="colWeeklyTheoryHours" prefWidth="70.0" text="Teori" />
                        <TableColumn fx:id="colWeeklyPracticeHours" prefWidth="80.0" text="Uyg." />
                        <TableColumn fx:id="colMidterm" prefWidth="80.0" text="Vize" />
                        <TableColumn fx:id="colFinal" prefWidth="80.0" text="Final" />
                        <TableColumn fx:id="colAverage" prefWidth="80.0" text="Ort." />
                        <TableColumn fx:id="colLetter" prefWidth="80.0" text="Harf" />
                        <TableColumn fx:id="colAttendance" prefWidth="100.0" text="Devamsızlık" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Durum" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 15; -fx-background-color: #bdc3c7;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Genel Akademik Ortalama (GPA): " />
            <Label fx:id="lblGpa" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2980b9;" text="0.00" />
        </HBox>
    </bottom>
</BorderPane>