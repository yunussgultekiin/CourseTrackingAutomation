<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.StudentDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Öğrenci Paneli" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Label>
            
            <HBox HBox.hgrow="ALWAYS" />

            <Label fx:id="lblWelcome" text="Hoşgeldin, Öğrenci" textFill="#ecf0f1">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Button fx:id="btnProfile" mnemonicParsing="false" onAction="#handleProfile" styleClass="button-secondary" text="Profilim" />
            <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#handleLogout" styleClass="button-logout" text="Çıkış Yap" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <Label text="Derslerim ve Not Durumu" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="btnEnrollCourse" mnemonicParsing="false" onAction="#handleEnrollCourse" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Derse Kaydol" />
                <Button fx:id="btnTranscript" mnemonicParsing="false" onAction="#handleShowTranscript" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Transkript Görüntüle" />
            </HBox>
            
            <TableView fx:id="tableStudentCourses" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCourseCode" prefWidth="90.0" text="Ders Kodu" />
                    <TableColumn fx:id="colCourseName" prefWidth="200.0" text="Ders Adı" />
                    <TableColumn fx:id="colCredit" prefWidth="60.0" text="Kredi" />
                    <TableColumn fx:id="colMidterm" prefWidth="70.0" text="Vize" />
                    <TableColumn fx:id="colFinal" prefWidth="70.0" text="Final" />
                    <TableColumn fx:id="colAverage" prefWidth="80.0" text="Ortalama" />
                    <TableColumn fx:id="colLetter" prefWidth="80.0" text="Harf Notu" />
                    <TableColumn fx:id="colAttendance" prefWidth="100.0" text="Devamsızlık" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Durum" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: #bdc3c7; -fx-padding: 10;">
            <Label text="Genel Not Ortalaması (GNO):">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="lblGpa" text="0.00" textFill="#2980b9">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>