<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" styleClass="app-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.StudentDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="topbar">
            <Label text="Öğrenci Paneli" styleClass="topbar-title">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Label>
            
            <HBox HBox.hgrow="ALWAYS" />

            <Label fx:id="lblWelcome" text="Hoşgeldin, Öğrenci" styleClass="topbar-subtitle">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Button fx:id="btnProfile" mnemonicParsing="false" onAction="#handleProfile" styleClass="button-secondary" text="Profilim" />
            <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#handleLogout" styleClass="button-logout" text="Çıkış Yap" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" styleClass="content-area">
            <Label text="Derslerim ve Not Durumu" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="btnEnrollCourse" mnemonicParsing="false" onAction="#handleEnrollCourse" styleClass="btn-primary-green" text="Derse Kaydol" />
                <Button fx:id="btnTranscript" mnemonicParsing="false" onAction="#handleShowTranscript" styleClass="btn-primary-blue" text="Transkript Görüntüle" />
            </HBox>
            
            <TableView fx:id="tableStudentCourses" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCourseCode" prefWidth="120.0" text="Ders Kodu" />
                    <TableColumn fx:id="colCourseName" prefWidth="340.0" text="Ders Adı" />
                    <TableColumn fx:id="colCredit" prefWidth="60.0" text="Kredi" />
                    <TableColumn fx:id="colWeeklyTotalHours" prefWidth="140.0" text="Haftalık (Toplam)" />
                    <TableColumn fx:id="colWeeklyTheoryHours" prefWidth="100.0" text="Teori" />
                    <TableColumn fx:id="colWeeklyPracticeHours" prefWidth="110.0" text="Uygulama" />
                    <TableColumn fx:id="colMidterm" prefWidth="70.0" text="Vize" />
                    <TableColumn fx:id="colFinal" prefWidth="70.0" text="Final" />
                    <TableColumn fx:id="colAverage" prefWidth="80.0" text="Ortalama" />
                    <TableColumn fx:id="colLetter" prefWidth="80.0" text="Harf Notu" />
                    <TableColumn fx:id="colAttendance" prefWidth="120.0" text="Devamsızlık (Saat)" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Durum" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" styleClass="footerbar">
            <Label text="Genel Not Ortalaması (GNO):">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <Label fx:id="lblGpa" text="0.00" textFill="#2980b9">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>