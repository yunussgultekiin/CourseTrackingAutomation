<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.coursetrackingautomation.controller.EditCourseFormController"
      stylesheets="@styles.css"
      spacing="14.0" styleClass="card" prefWidth="560.0" prefHeight="420.0">

    <padding>
        <Insets top="18.0" right="18.0" bottom="18.0" left="18.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Ders Düzenle" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="160.0" halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Ders Kodu:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="lblCourseCode" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Ders Adı:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="txtName" promptText="Ders adı" styleClass="input-compact"
                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Kredi:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="txtCredit" promptText="örn: 4" styleClass="input-compact"
                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Kota:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="txtQuota" promptText="örn: 30" styleClass="input-compact"
                   GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Dönem:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="txtTerm" promptText="örn: 2025" styleClass="input-compact"
                   GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Akademisyen:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <ComboBox fx:id="cmbInstructor" promptText="Akademisyen seçin" styleClass="input-compact"
                  GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Aktif:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <CheckBox fx:id="chkActive" text="Aktif" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Kaydet" onAction="#handleSave" styleClass="btn-primary-green" />
        <Button text="İptal" onAction="#handleClose" styleClass="btn-secondary" />
    </HBox>

</VBox>
