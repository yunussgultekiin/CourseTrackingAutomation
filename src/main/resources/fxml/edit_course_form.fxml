<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="650.0" prefWidth="550.0" spacing="15.0" styleClass="card-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.coursetrackingautomation.controller.EditCourseFormController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Ders Duzenle" />
    <Separator />

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Ders Kodu" />
        <Label fx:id="courseCodeLabel" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #7f8c8d;" text="-" />
    </VBox>

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Ders Adi" />
        <TextField fx:id="nameField" promptText="Ders adi" />
    </VBox>

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Donem" />
        <TextField fx:id="termField" promptText="Orn: 2025" />
    </VBox>

    <HBox spacing="15.0">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label styleClass="form-label" text="Kredi" />
            <TextField fx:id="creditField" promptText="Orn: 4" />
        </VBox>
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label styleClass="form-label" text="Kota" />
            <TextField fx:id="quotaField" promptText="Orn: 30" />
        </VBox>
    </HBox>

    <HBox spacing="10.0">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label styleClass="form-label" text="Toplam Saat" />
            <TextField fx:id="weeklyTotalHoursField" promptText="3" />
        </VBox>
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label styleClass="form-label" text="Teori" />
            <TextField fx:id="weeklyTheoryHoursField" promptText="2" />
        </VBox>
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label styleClass="form-label" text="Uygulama" />
            <TextField fx:id="weeklyPracticeHoursField" promptText="1" />
        </VBox>
    </HBox>

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Akademisyen" />
        <ComboBox fx:id="instructorComboBox" maxWidth="Infinity" promptText="Akademisyen secin" />
    </VBox>

    <VBox spacing="5.0">
        <Label styleClass="form-label" text="Durum" />
        <HBox spacing="15.0">
            <RadioButton fx:id="activeRadio" text="Aktif" />
            <RadioButton fx:id="passiveRadio" text="Pasif" />
        </HBox>
    </VBox>

    <Region VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button cancelButton="true" onAction="#handleClose" styleClass="button, button-secondary" text="Iptal" />
        <Button defaultButton="true" onAction="#handleSave" styleClass="button, button-success" text="Kaydet" />
    </HBox>

</VBox>