<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.coursetrackingautomation.controller.EditCourseFormController"
      stylesheets="@styles.css"
    spacing="18.0" styleClass="dialog-card" prefWidth="560.0" prefHeight="520.0">

    <padding>
        <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
    </padding>

    <Label text="Ders Düzenle" styleClass="section-title" />

    <Separator />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="160.0" halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Ders Kodu:" styleClass="sidebar-title" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="courseCodeLabel" text="-" styleClass="muted" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Ders Adı:" styleClass="sidebar-title" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" promptText="Ders adı" styleClass="input"
                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Kredi:" styleClass="sidebar-title" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="creditField" promptText="örn: 4" styleClass="input"
                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Kota:" styleClass="sidebar-title" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="quotaField" promptText="örn: 30" styleClass="input"
                   GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Dönem:" styleClass="sidebar-title" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="termField" promptText="örn: 2025" styleClass="input"
                   GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Haftalık Toplam Saat:" styleClass="sidebar-title" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="weeklyTotalHoursField" promptText="örn: 3" styleClass="input"
                   GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Haftalık Teori Saati:" styleClass="sidebar-title" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="weeklyTheoryHoursField" promptText="örn: 2" styleClass="input"
                   GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Haftalık Uygulama Saati:" styleClass="sidebar-title" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <TextField fx:id="weeklyPracticeHoursField" promptText="örn: 1" styleClass="input"
                   GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Label text="Akademisyen:" styleClass="sidebar-title" GridPane.rowIndex="8" GridPane.columnIndex="0" />
        <ComboBox fx:id="instructorComboBox" promptText="Akademisyen seçin" styleClass="input"
                  GridPane.rowIndex="8" GridPane.columnIndex="1" />

        <Label text="Durum:" styleClass="sidebar-title" GridPane.rowIndex="9" GridPane.columnIndex="0" />
        <HBox spacing="12.0" GridPane.rowIndex="9" GridPane.columnIndex="1">
            <RadioButton fx:id="activeRadio" text="Aktif" />
            <RadioButton fx:id="passiveRadio" text="Pasif" />
        </HBox>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="İptal" onAction="#handleClose" styleClass="btn-secondary" />
        <Button text="Kaydet" onAction="#handleSave" styleClass="btn-primary-green" />
    </HBox>

</VBox>
